{% extends "_layout.twig" %}

{% set title = __("Register") %}
{% set noindex = true %}

	{% block content %}
<form class="reglog" method="POST"><table class="c1">
	<tr class="h"><td>{{ __("Register") }}</td></tr>
	<tr><td class="n1 center">
		{% if error %}
			<p class="error">{{ __("The following errors occurred when trying to register:") }} <br>- {{ error | join('<br>-') | raw }}</p>
		{% endif %}

		<p>{{ __("Register an account at %s in order to post and partake in discussions!", config.title) }}</p>

		<div>
			<span>{{ __("Username:") }}</span>
			<input type="text" name="name" size="25" maxlength="25" value="{{ name }}">
		</div><div>
			<span>{{ __("Password:") }}</span>
			<input type="password" name="password" size="25" maxlength="64">
		</div><div>
			<span>{{ __("Password confirmation:") }}</span>
			<input type="password" name="password2" size="25" maxlength="64">
		</div>

		<div><input type="submit" class="submit" name="action" value="{{ __("Register") }}"></div>

		<p>{{ __("Before registering %s please read the FAQ %s as it contains the privacy policy and rules of this board.", '<a href="faq">', '</a>') }}</p>
	</td>
</table></form>
	{% endblock %}
