<form {% if action %}action="{{ action }}"{% endif %} method="POST"><table class="c1 postform">
	<tr class="h"><td colspan="2">{{ name }}</td></tr>
	<tr class="n1">
		<td class="nb center" style="width:120px;height:32px"><strong>Title:</strong></td>
		<td class="nb">
			{%- if editable_title -%}
				<input type="text" name="title" style="width:60%" value="{{ post_title }}">
			{%- else -%}
				{{ post_title }}
			{%- endif -%}
		</td>
	</tr>
	<tr class="n1">
		<td class="nb"></td>
		<td class="nb">
			{{ posttoolbar() }}

			<textarea name="message" id="message" rows="12" cols="80">{{ post_message }}</textarea>

			<div class="actionbar">
				<input type="submit" name="action" value="Preview">
				<input type="submit" name="action" value="Submit">
			</div>
		</td>
	</tr>
</table></form>