{% extends "_layout.twig" %}

{% set title = forum.title %}

{% if log %}
	{% set actions = {("newthread.php?id="~id) : "New thread"} %}
{% endif %}

	{% block content %}
<table class="c1">
	<tr class="h">
		<td colspan="2">Title</td>
		<td style="width:150px">Author</td>
		<td style="width:60px">Replies</td>
		<td style="width:60px">Views</td>
		<td style="width:175px">Last post</td>
	</tr>
	{% set i = 1 %}
	{% for thread in threads %}
		{% if i % 2 %}
			{% set zebra = 1 %}
		{% else %}
			{% set zebra = 2 %}
		{% endif %}

		<tr class="center n{{ zebra }}">
			<td style="width:30px"></td>
			<td class="left">
				<a href="thread.php?id={{ thread.id }}">{{ thread.title }}</a>
			</td>
			<td>{{ userlink(thread, 'u_') }}</td>
			<td>{{ thread.posts-1 }}</td>
			<td>{{ thread.views }}</td>
			<td>
				<span>{{ thread.lastdate | date('Y-m-d H:i') }}</span><br>
				<span>by {{ userlink(thread, 'ul_' ) }}
					<a href="thread.php?pid={{ thread.lastid }}#{{ thread.lastid }}">&raquo;</a></span>
			</td>
		</tr>
		{% set i = i + 1 %}
	{% endfor %}
</table>
	{% endblock %}
